<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SigninController">
    <padding><Insets top="30.0" right="40.0" bottom="30.0" left="40.0"/></padding>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <children>
        <Label text="Sign In"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="passwordField" promptText="Password"/>
        <Button text="Sign In" onAction="#onSignInAction"/>
        <Button text="Back" onAction="#onBackAction"/>
    </children>
</VBox>
